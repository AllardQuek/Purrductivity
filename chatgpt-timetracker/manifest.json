{
  "manifest_version": 3,
  "name": "LifeHack",
  "version": "1.0",
  "description": "Multi-purpose extension",
  "default_locale": "en",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_popup": "popup/popup.html"
  },
  "options_page": "gpt/options.html",
  "content_scripts": [
    {
      "js": ["features/reading.js", "features/pet.js"],
      "css": ["features/pet.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": ["<all_urls>"],
  "permissions": ["tabGroups", "scripting", "contextMenus", "storage", "tabs"],
  "web_accessible_resources": [
    {
      "resources": ["pets/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "command1": {
      "suggested_key": {
        "default": "Ctrl+Shift+1",
        "mac": "Command+Shift+1"
      },
      "description": "Reading Time"
    },
    "command2": {
      "suggested_key": {
        "default": "Ctrl+Shift+2",
        "mac": "Command+Shift+2"
      },
      "description": "Pet Animation"
    }
  }
}
